 <a class="btn btn-success float-right btn-sm" href="/admin">Go to admin</a>
 <h1 class="padding20">Edit Employee Details</h1>
  <div id="messages">
      
</div>

 <form id="editEmployee" class="row padding20" method="post" action="" enctype="multipart/form-data"> 
 
 <div class="col-lg-10">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter Employee name">
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="email" name="email" placeholder="Enter Email">
    </div>
  </div>
  <div class="form-group row">
    <label for="designation" class="col-sm-2 col-form-label">Designation</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="designation" name="designation" placeholder="Enter designation">
    </div>
  </div>
  
  <div class="form-group row">
    <label for="short_desc" class="col-sm-2 col-form-label">About Employee</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="short_desc" value="{{employee.short_desc}}" name="short_desc" placeholder="Short Description About Employee">
    </div>
  </div>

    <div class="form-group row">
    <label for="desc" class="col-sm-2 col-form-label">Profile Image</label>
    <div class="col-sm-10">
     <input type="file" class="form-control-file" id="profileimage" name="profileimage">        
    </div>
  </div>
  
   <div class="form-group row">
    <label for="desc" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
     <textarea name="desc" id="desc" class="form-control" placeholder="Full Description About Employee"></textarea>      
    </div>
  </div>
     </div>
      <div class="col-lg-2">      
    <button type="submit" class="btn btn-lg btn-primary">Update Details</button>   
    <img id="oldprofile" class="padding20 figure-img img-fluid rounded" src="/images/profileimages/{{employee.profileimage}}">
       <p class="lead text-info text-center">  
           Uploaded Image 
       </p>                
     </div> 
</form>

<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=86l45zfr0m92feksnw426835ejdiynd3ipgn24lr46nsxv6r"></script>
